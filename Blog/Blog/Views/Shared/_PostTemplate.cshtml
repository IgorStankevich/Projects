@model Blog.Entities.Post


<div class="post-meta">
@*<div class="container">
    <div class="row">*@
 
      <!--Heading-->
      <div class="post-title col-md-12">
        <h2>@Model.Title</h2>
      </div>
 
    
 
    <div class="row col-md-12">
 
      <!--Posted date-->
      <div class="posted-date col-md-12">
        @Model.DateCreated.Date</div>
 
    </div>
 
  </div>
 
  <!--Short Description-->
<div>
    @Html.Raw(Model.ShortContent)
  </div>

<div class="post-foot col-md-12">
    @Html.ActionLink("continue...", "Post")
@*</div>
</div>*@
</div>